{{ define "base/body.tmpl" }}
<body>    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            {{if .indexLink}} <a class="navbar-brand" href="/web">Главная</a> {{end}}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        {{if .addLink}} <a class="nav-link" href="/web/add">Добавить пациента в очередь</a> {{end}}
                    </li>
                    <li class="nav-item">
                        {{if .editLink}} <a class="nav-link" href="/web/select">Отобразить список пациентов по специальности...</a> {{end}}
                    </li>
                    <!-- <li class="nav-item">
                        {{if .netLink}} <a class="nav-link" href="/web/net" id="hrefMainNet"  running="">Инвентаризация сети</a> {{end}}
                    </li> -->
                </ul>
                <div class="d-flex align-items-center">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0);" id="username">{{ .username }}</a>
                        </li>
                        <li class="nav-item">
                            {{if .sign}} <a class="btn btn-outline-success me-2 signout" type="button" href="/auth/signout">Выйти</a> {{else}} <a class="btn btn-outline-success me-2 signin" type="button" href="/auth/signin">Войти</a>{{end}}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- toast code -->
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div id="addNoteToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto" id="toastHeaderText"></strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="addNoteToastBody"></div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="content">
                    {{ end }}
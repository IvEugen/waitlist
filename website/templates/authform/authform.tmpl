{{ template "base/header.tmpl" .}}
{{ template "base/body.tmpl" .}}
<div id="content">
  <div class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
      <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card bg-white">
            <div class="card-body p-5">
              <form id="loginForm" class="mb-3 mt-md-4">
                <h2 class="fw-bold mb-2 text-uppercase ">Портал ДГБ Н-Тагил</h2>
                <p class=" mb-5">Пожалуйста введите Ваш логин и пароль</p>
                <div class="mb-3">
                  <label for="email" class="form-label ">Логин</label>
                  <input type="text" class="form-control" id="login" placeholder="test">
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label ">Password</label>
                  <input type="password" class="form-control" id="password" placeholder="*******">
                </div>
                <div id="messages"></div>
                <p class="small">Забыли пароль? -Обратитесь к администратору!</p>
                <div class="d-grid">
                  <button class="btn btn-outline-dark" type="submit">Войти</button>
                </div>
              </form>
              <div>
                <p class="mb-0  text-center">Для получения логина и пароля обратитесь к администратору!</p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.title = {{ .title }};
    $(window).on("load", function () {
      submitFormAuth();
    });    
  </script>
</div>
{{ template "base/footer.tmpl" .}}